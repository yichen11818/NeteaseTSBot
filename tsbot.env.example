# TSBot 环境配置模板
# 复制此文件为 tsbot.env 并修改相应的值

# TS3 服务器配置
TSBOT_TS3_HOST=your_teamspeak_server_ip
TSBOT_TS3_PORT=9987
TSBOT_TS3_NICKNAME=tsbot
TSBOT_TS3_CHANNEL_ID=2

# 后端服务配置
TSBOT_HOST=127.0.0.1
TSBOT_PORT=8009
TSBOT_VOICE_GRPC_ADDR=127.0.0.1:50051

# 数据库配置
DATABASE_URL=sqlite:///./tsbot.db

# 网易云音乐配置
# 管理员Cookie用于歌曲播放和URL解析
NETEASE_ADMIN_COOKIE=your_admin_cookie_here

# 日志配置
TSBOT_LOG_LEVEL=INFO
TSBOT_LOG_FILE=logs/backend.log

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/tsbot.log

# 开发模式 (true/false)
DEBUG=false

# Web前端配置
VITE_DEV_HOST=127.0.0.1
VITE_DEV_PORT=5173

# gRPC服务配置
GRPC_HOST=127.0.0.1
GRPC_PORT=50051
